<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data></data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/mp_40"
        android:paddingBottom="@dimen/mp_40"
        android:paddingLeft="@dimen/mp_20"
        android:paddingRight="@dimen/mp_20"
        tools:context=".ui.StartActivity">
        <TextView
            android:id="@+id/st_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/splash_title"
            android:textSize="@dimen/text_26"
            android:textColor="@color/text_000"
            android:layout_marginTop="@dimen/mp_40"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <ProgressBar
            android:id="@+id/st_pb"
            style="@style/CustomProgressBar"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:orientation="horizontal"
            android:max="100"
            android:layout_marginBottom="@dimen/mp_40"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>